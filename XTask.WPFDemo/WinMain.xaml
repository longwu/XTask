<Window x:Class="XTask.WPFDemo.WinMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:XTask.WPFDemo"
        Title="MainWindow" Height="350" Width="525">
    <TabControl TabStripPlacement="Left">
        <TabItem Header="执行异步任务" Height="30">
            <TabItem.Content>
                <control:UCDemo1 HorizontalAlignment="Center"></control:UCDemo1>
            </TabItem.Content>
        </TabItem>
        <TabItem Header="撤销异步任务"  Height="30">
            <TabItem.Content>
                <control:UCDemo2 HorizontalAlignment="Center"></control:UCDemo2>
            </TabItem.Content>
        </TabItem>
        <TabItem Header="处理异步任务异常" Height="30">
            <TabItem.Content>
                <control:UCDemo3 HorizontalAlignment="Center"></control:UCDemo3>
            </TabItem.Content>
        </TabItem>
    </TabControl>
</Window>
