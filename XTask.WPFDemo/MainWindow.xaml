<Window x:Class="XTask.WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="300">
        <Border BorderBrush="Gray" BorderThickness="1">
            <TextBlock x:Name="tbk" Height="240" TextWrapping="Wrap"></TextBlock>
        </Border>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
            <Button x:Name="btnStart" Content="Start" Width="50" Height="30"/>
            <Button x:Name="btnStartWithError" Content="Start With Error" Width="105" Height="30" Margin="10 0 0 0"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="50" Height="30" Margin="10 0 0 0"/>
        </StackPanel>
    </StackPanel>
</Window>
