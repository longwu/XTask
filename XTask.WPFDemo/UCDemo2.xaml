<UserControl x:Class="XTask.WPFDemo.UCDemo2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="340" Height="300">
        <ListView x:Name="lsv" Height="240"></ListView>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
            <Button x:Name="btnStart" Content="启动任务" Height="30"/>
            <Button x:Name="btnCancel" Content="撤销任务" Height="30" Margin="10 0 0 0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
